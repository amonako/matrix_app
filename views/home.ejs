<!DOCTYPE html>
<html>
<head>
	<% include partials/head.ejs %>

</head>
<body>

	<% include partials/header.ejs %>
	
	<div id="hero-image">
		<h1 id="hero-title"><%= title %></h1>
	</div>

	<div id="posters-wrapper" class="content-padding clearfix">

		<% for (var i = 0; i < movies.length; i++) { %>		
		<div class="poster">

		<a href="/matrix_movies/<%= movies[i].movie_number %>">

			<img src="/images/<%= movies[i].poster %>" alt="<%= movies[i].title %>" class="img-responsive">

			<div class="poster-info-overlay">
				<h3><%= movies[i].title %></h3>
				<h4>Veja mais <span class="glyphicon glyphicon-triangle-right"></span></h4>
			</div>

		</a>

		</div>		
		<% } %>

	</div>



	<% include partials/footer.ejs %>

	<% include partials/scripts.ejs %>
</body>
</html>
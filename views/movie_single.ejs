<!DOCTYPE html>
<html>
<head>
	<% include partials/head.ejs %>

</head>
<body>

	<% include partials/header.ejs %>
	
	<div id="hero-image-single" style="background-image: url('/images/<%= movie.hero_image %>')">
		<h1 id="hero-title"><%= title %></h1>
	</div>

	<div class="content-padding clearfix">
		<div class="poster-wrapper">
			<img src="/images/<%= movie.poster %>" alt="<%= title %>" class="image-responsive">
		</div>

		<div class="description-wrapper">

			<div class="description">
				<h2 class="movie-header">Descrição</h2>
				<p><%= movie.description %></p>
			</div>

			<div class="main-characters">
				<h2 class="movie-header">Elenco</h2>
				<ul>
					<% for (var i = 0; i < elenco.length; i++) { %>
					<li><%= elenco[i] %></li>
					<% } %>
				</ul>
			</div>

		</div>
	</div>
	
	<% include partials/footer.ejs %>

	<% include partials/scripts.ejs %>
</body>
</html>